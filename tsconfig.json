// tsconfig.json
{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext", "esnext.asynciterable", "dom"],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"alwaysStrict": true,
		"importHelpers": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"~~/*": ["./*"],
			"@@/*": ["./*"]
		},
		"types": [
			"buefy/types",
			"@types/node",
			"@nuxt/types"
			// , "nuxt-i18n"
		]
	},
	"exclude": ["node_modules", ".nuxt", "dist"]
}
