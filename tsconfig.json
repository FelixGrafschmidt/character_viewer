// tsconfig.json
{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext", "esnext.asynciterable", "dom"],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowJs": false,
		"alwaysStrict": true,
		"importHelpers": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"~~/*": ["./*"],
			"@@/*": ["./*"]
		},
		"types": ["@types/node", "@nuxt/types", "buefy/types"]
	},
	"exclude": ["node_modules", ".nuxt", "dist"]
}
